<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/edit_car_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <!-- Make -->
        <EditText
            android:id="@+id/edit_make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Make"/>

        <!-- Model -->
        <EditText
            android:id="@+id/edit_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Model"
            android:layout_marginTop="8dp"/>

        <!-- Price -->
        <EditText
            android:id="@+id/edit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <!-- Year -->
        <EditText
            android:id="@+id/edit_modelYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <!-- Color -->
        <EditText
            android:id="@+id/edit_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color"
            android:layout_marginTop="8dp"/>

        <!-- Transmission -->
        <EditText
            android:id="@+id/edit_transmission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Transmission"
            android:layout_marginTop="8dp"/>

        <!-- Seats -->
        <EditText
            android:id="@+id/edit_seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seats"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <!-- Doors -->
        <EditText
            android:id="@+id/edit_doors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Doors"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <!-- License plate -->
        <EditText
            android:id="@+id/edit_licensePlate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="License Plate"
            android:layout_marginTop="8dp"/>

        <!-- Pickup location -->
        <EditText
            android:id="@+id/edit_pickupLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pickup Location"
            android:layout_marginTop="8dp"/>

        <!-- Booking Cost -->
        <EditText
            android:id="@+id/edit_bookingCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Booking Cost"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <!-- Deposit -->
        <EditText
            android:id="@+id/edit_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deposit"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <!-- Cost per Kilometer -->
        <EditText
            android:id="@+id/edit_costPerKilometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cost per Kilometer"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <!-- Engine Type -->
        <EditText
            android:id="@+id/edit_engineType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Engine Type"
            android:layout_marginTop="8dp"/>

        <!-- Engine Power -->
        <EditText
            android:id="@+id/edit_enginePower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Engine Power"
            android:layout_marginTop="8dp"/>

        <!-- Save button -->
        <Button
            android:id="@+id/edit_save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
